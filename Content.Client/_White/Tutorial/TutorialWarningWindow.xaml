<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="{Loc 'tutorial-warning-window-title'}"
               MinSize="400 200"
               SetSize="400 200">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Text="{Loc 'tutorial-warning-window-text'}"
               HorizontalAlignment="Center"
               Margin="0 0 0 20" />

        <BoxContainer Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      SeparationOverride="10">
            <Button Name="CancelButton"
                    Text="{Loc 'tutorial-warning-window-cancel'}"
                    MinSize="100 30" />
            <Button Name="ConfirmButton"
                    Text="{Loc 'tutorial-warning-window-confirm'}"
                    MinSize="100 30" />
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
